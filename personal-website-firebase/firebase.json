{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ 
      {
        "source": "**/*.data.br",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/octet-stream"
          },
          {
            "key": "Content-Encoding",
            "value": "br"
          }
        ]
      },
      {
        "source": "**/*.wasm.br",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/wasm"
          },
          {
            "key": "Content-Encoding",
            "value": "br"
          }
        ]
      },
      {
        "source": "**/*.js.br",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          },
          {
            "key": "Content-Encoding",
            "value": "br"
          }
        ]
      }
   ]
  }
}
